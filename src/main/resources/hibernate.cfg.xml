<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.jndiName">DefaultDS</property>

        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/booking?serverTimezone=UTC</property>

        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>

        <!-- JDBC connection pool (use the built-in) -->

        <!--
                <property name="hibernate.connection.pool_size">1</property>
        -->
        <!-- Enable Hibernate's automatic session context management
        Due to that setting, the context of a current unit of work is
        bound to the current Java thread that executes the application.-->
        <property name="current_session_context_class">thread</property>

        <!-- Disable the second-level cache -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCachingRegionFactory</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.show_sql">false</property>
        <!-- Drop and re-create the database schema on startup  validate | update | create | create-drop -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.enable_lazy_load_no_trans">true</property>

        <mapping class="model.Application" />
        <mapping class="model.ApplicationResponse" />
        <mapping class="model.Recall" />
        <mapping class="model.Reservation" />
        <mapping class="model.User" />
        <mapping class="model.Role" />
        <mapping class="model.ReservationStatus" />
        <mapping class="model.Room" />
        <mapping class="model.ClassOfHotelRoom" />

    </session-factory>
</hibernate-configuration>